<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactAddActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginBottom="45dp"
            android:background="@color/colorPrimaryDark"/>
        <ImageView
            android:id="@+id/PhotoImageView"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:transitionName="@string/appName"
            android:layout_width="160dp"
            android:layout_height="140dp"/>

    </FrameLayout>
    <FrameLayout
        android:layout_marginHorizontal="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:layout_gravity="top|center"
            android:id="@+id/ImageUrlEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Имя"
                    android:textSize="30sp"/>
                <EditText
                    android:id="@+id/FirstNameEditText"
                    android:layout_gravity="right"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Фамилия"
                    android:textSize="30sp"/>
                <EditText
                    android:id="@+id/LastNameEditText"
                    android:layout_gravity="right"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Телефон"
                    android:textSize="30sp"/>
                <EditText
                    android:id="@+id/NumberEditText"
                    android:layout_gravity="right"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Организация"
                    android:textSize="30sp"/>
                <EditText
                    android:id="@+id/OrganizationEditText"
                    android:layout_gravity="right"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Мелодия"
                    android:textSize="30sp"/>
                <EditText
                    android:id="@+id/MelodyEditText"
                    android:layout_gravity="right"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"/>
            </FrameLayout>
        </LinearLayout>
        <Button
            android:id="@+id/AddContactButton"
            android:layout_gravity="bottom|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:background="@drawable/shape_round_main_color"
            android:padding="20dp"
            android:layout_marginVertical="40dp"
            android:text="Добавить"/>
    </FrameLayout>
</LinearLayout>